<div class="container">
  {{outlet}}

  {{#if model.length}}
  <div class="well">
    {{#each model key="@index" as |error|}}
      {{x-error model=error}}
    {{/each}}
  </div>
  <button {{action "clearErrors"}} class="btn btn-default pull-left">Clear errors</button>
  {{/if}}
</div>

{{outlet "context"}}
